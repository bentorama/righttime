<div class="confirmation-container">
  <div class="confirmation-card">
    <div class="confirmation-details">
      <h1>Order #<%= @order.id %>
      <span class="badge badge-warning"><%= @order.state %></span>  
      </h1>
      <h1>CONGRATS.</h1>
      <p><%= image_tag(@order.event.photos.first) %></p>
      <h2>You are going to</h2> 
      <h2><%= @order.event.name %></h2>
      <p><strong>START TIME</strong> <%= @order.event.start_time.strftime("%H:%M") %></p>
      <p>EVENT <%= @order.event.name %></p>
      <p>NO. TICKETS <%= (@order.amount / @order.event.price).to_i  %></p>
      <p>TOTAL <%= humanized_money_with_symbol @order.amount %></p>

      <button class="btn" id="show-directions">
        <p>Show Directions</p>
      </button>

      <div class="hide" id="directions-container">
        <div id="map-directions" style="min-width: 320px; min-height: 40vh;" data-destination="<%= @destination.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
        <%# <div id="instructions"></div> %>
      </div>
  
      <button class="btn">
        <%= link_to "See More Events", events_path %>
      </button>
    </div>
  </div>
</div>

<div id="checkout-footer">
  <%= render "components/footer" %>
</div>

<%= javascript_pack_tag 'directions' %>
<script type="text/javascript">
  document.getElementById("show-directions").addEventListener("click", (event) => {
    const toggle = document.getElementById("directions-container");
    if (toggle.style.display === "none") {
      toggle.style.display = "block";
    } else {
      toggle.style.display = "none";
    }
    if (event.currentTarget.innerHTML === "Show Directions") {
      event.currentTarget.innerHTML = "Hide Directions";
    } else {
      event.currentTarget.innerHTML = "Show Directions";
    }
  })
</script>

