<div id="page-container">
  <div class="checkout-container">
    <!-- checkout summary -->
    <div class="payment-new-container">
      <h1>Checkout summary:</h1>
      <p>Attending <strong><%= @order.event.name %></strong> for <strong><%= humanized_money_with_symbol @order.amount_cents / 100 %></strong></p>
      <button id="pay" class="btn btn-primary">Pay</button>
      <script src="https://js.stripe.com/v3/"></script>
      <script>
        const paymentButton = document.getElementById('pay');
        paymentButton.addEventListener('click', () => {
          const stripe = Stripe('<%= ENV['STRIPE_PUBLISHABLE_KEY'] %>');
          stripe.redirectToCheckout({
            sessionId: '<%= @order.checkout_session_id %>'
          });
        });
      </script>
    </div>
    <%= link_to "Back to Event", event_path(@order.event), class: "payment-back-btn" %>
  </div>
  <div id="checkout-footer">
    <%= render "components/footer" %>
  </div>
</div>
