<div id="page-container-checkout">
  <div id="checkout-container">
    <div id="checkout-window">
      <div>
      <%= link_to ('<i class="fas fa-arrow-left"></i>').html_safe, event_path(@order.event) %>
      </div>
      <div id="checkout-content">
        <h1>Checkout Summary</h1>
        <div>
          <%= cl_image_tag @order.event.photos.first.key %>
          <p>Attending <strong><%= @order.event.name %></strong> for <strong><%= humanized_money_with_symbol @order.amount_cents / 100 %></strong></p>
        </div>
        <div>
        <button id="pay" class="btn">Pay Now</button>
        <script src="https://js.stripe.com/v3/"></script>
        <script>
          const paymentButton = document.getElementById('pay');
          paymentButton.addEventListener('click', () => {
            const stripe = Stripe('<%= ENV['STRIPE_PUBLISHABLE_KEY'] %>');
            stripe.redirectToCheckout({
              sessionId: '<%= @order.checkout_session_id %>'
            });
          });
        </script>
      </div>
      </div>
    </div>
  </div>

  <div id="checkout-footer">
    <%= render "components/footer" %>
  </div>
</div>
