<div id="page-container-index">
  <div>
    <!-- map viewport -->  
    <!-- map dimensions -->
    <div id="map" style="min-width: 320px; height: 93vh;" data-markers="<%= @markers.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>" data-center="<%= @center.to_json %>">
      filter buttons 
    
      <div id="filter-flex">  
        <%= render "components/filter" %>
      </div>
      <div class="surprise-button-container">
        <div>
          <p>Feeling lucky?</p>        
        </div>
        <div>
          <%= link_to event_path(@rand_event) do %>
            <button class="surprise-button" type="button">
              <img src="https://res.cloudinary.com/markcarson121/image/upload/v1623348000/white_hot_i3opcg.png">
            </button>
          <% end %> 
        </div>
      </div>
   
    
    <!-- event cards -->
    
    <div class="event-card-container" id="scrolling-container">
      <% @events.each do |event| %>
        <% if event.start_time > Time.now %>
          <div class="event-card" id="id-<%=event.id%>">
            <!-- event card image -->
            <div>
              <% if event.current_price == event.starting_price %>  
                <p class="event-price">£<%= event.current_price.round(2) %></p>
              <% else %>
                <p class="event-price">Discount: £<%= event.current_price.round(2) %></p>
              <% end %>
            
              <%= link_to event_path(event) do %>
                <%= image_tag(event.photos.first) %>
              <% end %>
            </div>
            <div class="event-information">
              <div>
                <div class="card-top-row">
                  <div id="heart">
                    <% if user_signed_in? %>
                      <% if current_user.is_favourite_event?(event.id) %>
                        <%= link_to favourite_path(event.favourites.find_by(user_id: current_user.id)), :method => :delete do %>
                          <i class="fas fa-heart" id="index-heart"></i>
                        <% end %>
                      <% else %>
                        <%= simple_form_for([ event, Favourite.new ]) do |f|  %>
                          <%= button_tag type: 'submit' do %>
                            <i class="far fa-heart" id="index-heart"></i>
                          <% end %>
                        <% end %>
                      <% end %>
                    <% else %>
                      <i class="far fa-heart" id="index-heart"></i>
                    <% end %>
                  </div>
                </div>
              </div>
              <div class="event-details">
                <h2><%= link_to event.name, event_path(event) %></h2>
                <div id="venue">
                  <p>@ <%= event.venue.name %></p>
                </div>
                <div id="venue-details">
                <span><%= "#{event.reviews.average(:venue_rating)}" %></span>  
                <% if event.reviews.count > 0 %>
                  <% event.reviews.average(:venue_rating).round.times %>  
                  <i class="fas fa-star star"></i>
                <% end %>
                <span><%= "| #{event.category}" %></span>
              </div>
              </div>
              <div class="event-timer">
                <p>Starts at <% t = event.start_time %><%= t.strftime("%l:%M %P") %></p>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
     </div>
  </div>

  <div id="checkout-footer">
    <%= render "components/footer" %>
  </div>
</div>
